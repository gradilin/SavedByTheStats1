@model GoogleCloudSamples.Models.Team

<h3>Team</h3>
<form method="post" action="/Teams/Delete/@Model.TeamId" id="deleteForm">
    @Html.AntiForgeryToken()
    <div class="btn-group">
        <a href="/Teams/Edit/@Model.TeamId"
           class="btn btn-primary btn-sm">
            <i class="glyphicon glyphicon-edit"></i>
            Edit Player
        </a>
        @*<button id="submit" type="submit" class="btn btn-danger btn-sm">
                <i class="glyphicon glyphicon-trash"></i>
                Delete Player
            </button>*@
    </div>
</form>

<div class="media">
    <div class="media-body">
        <h4> @Html.DisplayFor(model => model.TeamName) </h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TeamOwner)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TeamOwner)
            </dd>
        </dl>
        <table class="table">
            <tr>
                <th>
                    Pos.
                </th>
                <th>
                    Player Name
                </th>
                <th>
                    Team
                </th>
                <th>
                    Goals
                </th>
                <th>
                    Assists
                </th>
                <th>
                    Wins
                </th>
                <th>
                    Shutouts
                </th>
                <th>
                    Total Points
                </th>
            </tr>
            @foreach (var player in (List<GoogleCloudSamples.Models.Player>)ViewBag.Players)
            {
                <tr>
                    <td>
                        @player.type
                    </td>
                    <td>
                        @player.fullName
                    </td>
                    <td>
                        @player.team
                    </td>
                    <td>
                        @player.goals
                    </td>
                    <td>
                        @player.assists
                    </td>
                    <td>
                        @player.wins
                    </td>
                    <td>
                        @player.shutouts
                    </td>
                    <td>
                        @(player.goals + player.shutouts + player.wins + player.assists)
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td>
                    <h4>Total:</h4>
                </td>
                <td>
                    @Html.DisplayFor(Model => Model.Goals)
                </td>
                <td>
                    @Html.DisplayFor(Model => Model.Assists)
                </td>
                <td>
                    @Html.DisplayFor(Model => Model.Wins)
                </td>
                <td>
                    @Html.DisplayFor(Model => Model.Shutouts)
                </td>
                <td>
                    @Html.DisplayFor(Model => Model.Points)
                </td>
            </tr>
        </table>

    </div>
</div>